HTML — register.html
<!DOCTYPE html>
<html>
<head><title>Registration</title></head>
<body>
  <h2>User Registration</h2>
  <form action="RegisterServlet" method="post">
    Username: <input name="username"><br>
    Password: <input type="password" name="password"><br>
    Email: <input type="email" name="email"><br>
    Country: <input name="country"><br>
    <input type="submit" value="Register">
  </form>
</body>
</html>

Java — RegisterServlet.java
import java.io.*; import java.sql.*;
import javax.servlet.*; import javax.servlet.http.*;

public class RegisterServlet extends HttpServlet {
  public void doPost(HttpServletRequest req, HttpServletResponse res)
      throws IOException, ServletException {
    res.setContentType("text/html"); PrintWriter out = res.getWriter();
    String u=req.getParameter("username"), p=req.getParameter("password"),
           e=req.getParameter("email"), c=req.getParameter("country");
    try{
      Class.forName("com.mysql.cj.jdbc.Driver");
      Connection con=DriverManager.getConnection("jdbc:mysql://localhost:3306/testdb","root","password");
      PreparedStatement ps=con.prepareStatement("INSERT INTO users(username,password,email,country) VALUES(?,?,?,?)");
      ps.setString(1,u); ps.setString(2,p); ps.setString(3,e); ps.setString(4,c);
      out.println(ps.executeUpdate()>0?"<h2>Registration Successful!</h2>":"<h2>Registration Failed</h2>");
      con.close();
    }catch(Exception ex){ out.println(ex); }
  }
}
