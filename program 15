HTML — visit.html
<!DOCTYPE html>
<html>
<head><title>Visit Counter</title></head>
<body>
  <a href="VisitServlet">Check Visits</a>
</body>
</html>

Java — VisitServlet.java
import java.io.*; import javax.servlet.*; import javax.servlet.http.*;

public class VisitServlet extends HttpServlet {
  public void doGet(HttpServletRequest req, HttpServletResponse res)
      throws IOException, ServletException {
    res.setContentType("text/html"); PrintWriter out=res.getWriter();
    int count=1; Cookie[] cs=req.getCookies();
    if(cs!=null) for(Cookie ck:cs) if("visits".equals(ck.getName())) count=Integer.parseInt(ck.getValue())+1;
    res.addCookie(new Cookie("visits", String.valueOf(count)));
    out.println("<h2>You have visited "+count+" times.</h2>");
  }
}
